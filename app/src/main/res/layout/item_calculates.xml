<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="entity"
            type="ru.wood.cuber.data.MyCalculation" />
        <variable
            name="slideCounter"
            type="java.lang.Boolean" />
    </data>
    <FrameLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/clicable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_normal"
        android:paddingLeft="@dimen/margin_normal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@{entity.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:hint="name"
                android:id="@+id/name"/>
            <TextView
                android:text="@{String.valueOf(entity.quantity)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="quantity of contains"
                android:id="@+id/quantity"/>

        </LinearLayout>
        <TextView
            android:text="@{entity.date}"
            android:layout_marginRight="@dimen/margin_min"
            android:hint="31/05/2021"
            android:layout_gravity="right"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"/>
    </FrameLayout>
</layout>